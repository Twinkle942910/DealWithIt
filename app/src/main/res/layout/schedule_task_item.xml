<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="3dp"
    android:background="@color/colorGreyText10"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/schedule_number_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/schedule_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TASK"
                android:textSize="18sp"
                android:textColor="@color/colorNotificationText"
                style="@style/TextRobotoLight"/>

            <TextView
                android:id="@+id/schedule_task_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/schedule_task_title"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/colorNotificationText"
                style="@style/TextRobotoLight"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_expand_collapse_task_icon"
                app:srcCompat="@drawable/ic_expand_less"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorGreyText10"/>

    <RelativeLayout
        android:id="@+id/schedule_content_title_section"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Task title"
            android:textSize="16sp"
            android:textColor="@color/colorNotificationText"
            style="@style/TextRobotoRegular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_content_title_icon"
            app:srcCompat="@drawable/ic_input_schedule_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/schedule_task_content"

            style="@style/WithoutLineStyleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:hint="Input task title!" />

    <RelativeLayout
        android:id="@+id/schedule_type_title_section"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Type"
            android:textSize="16sp"
            android:textColor="@color/colorNotificationText"
            style="@style/TextRobotoRegular"/>

        <ImageView
            android:id="@+id/schedule_type_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_schedule_input_lesson_type"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"  />

    </RelativeLayout>

        <TextView
            android:id="@+id/schedule_type_of_task"
            style="@style/TextRobotoLight"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No type"
            android:textColor="@color/colorText87"
            android:textSize="16sp" />


    <RelativeLayout
        android:id="@+id/schedule_start_time_title_section"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_start_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Start time"
            android:textSize="16sp"
            android:textColor="@color/colorNotificationText"
            style="@style/TextRobotoRegular"/>

        <ImageView
            android:id="@+id/schedule_start_time_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_from_time_schedule"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/schedule_start_time"
        style="@style/TextRobotoLight"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick time"
        android:textColor="@color/colorText87"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/schedule_end_time_title_section"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_end_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="End time"
            android:textSize="16sp"
            android:textColor="@color/colorNotificationText"
            style="@style/TextRobotoRegular"/>

        <ImageView
            android:id="@+id/schedule_end_time_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_to_time_schedule"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

            <TextView
                android:id="@+id/schedule_end_time"
                style="@style/TextRobotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick time"
                android:textColor="@color/colorText87"
                android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/schedule_interests_title_section"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_interests_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Interests"
            android:textSize="16sp"
            android:textColor="@color/colorNotificationText"
            style="@style/TextRobotoRegular"/>

        <ImageView
            android:id="@+id/schedule_interests_title_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_schedule_input_interest"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/schedule_interests"
        style="@style/TextRobotoLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No interests"
        android:textColor="@color/colorText87"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/schedule_importance_title_section"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_importance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Importance"
            android:textSize="16sp"
            android:textColor="@color/colorNotificationText"
            style="@style/TextRobotoRegular"/>

        <ImageView
            android:id="@+id/schedule_importance_title_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_importance_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <include
        android:id="@+id/importance_layout"
        layout="@layout/layout_task_importance" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorGreyText10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_input_delete"
            style="@style/TextRobotoLight"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/schedule_input_edit"
            android:text="DELETE"
            android:layout_marginRight="24dp"
            android:textColor="@color/colorNotificationText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/schedule_input_edit"
            style="@style/TextRobotoLight"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/schedule_input_done"
            android:text="EDIT"
            android:layout_marginRight="24dp"
            android:textColor="@color/colorNotificationText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/schedule_input_done"
            style="@style/TextRobotoLight"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
            android:text="DONE"
            android:textColor="@color/colorNotificationText"
            android:textSize="16sp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>