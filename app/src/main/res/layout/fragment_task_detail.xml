<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/task_state_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/nowStateColor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/task_state_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_state_now" />

        <TextView
            android:id="@+id/task_state"
            style="@style/TextRobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="3dp"
            android:text="NOW"
            android:textColor="@color/mainBackgroundColor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/task_edit_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/ic_edit_task" />

        <ImageView
            android:id="@+id/task_remove_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_remove_current_task" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_date_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/task_date"
            style="@style/TextRobotoLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday, August 14, 2017"
            android:textColor="@color/fontColor"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/fontColor" />

    <LinearLayout
        android:id="@+id/task_time_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/task_from_time_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_from_time" />

            <TextView
                android:id="@+id/task_from_time"
                style="@style/TextRobotoMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:text="12:00 AM"
                android:textColor="@color/fontColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/slash"
                style="@style/TextRobotoMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:text=" - "
                android:textColor="@color/fontColor"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/task_to_time_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_to_time" />

            <TextView
                android:id="@+id/task_to_time"
                style="@style/TextRobotoMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:text="01:00 PM"
                android:textColor="@color/fontColor"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_duration_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/task_duration_title"
            style="@style/TextRobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:paddingRight="16dp"
            android:text="Duration"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/task_duration_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/ic_duration_detail" />

        <TextView
            android:id="@+id/task_duration"
            style="@style/TextRobotoLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 hour"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/fontColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/fontColor" />

    <LinearLayout
        android:id="@+id/task_importance_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/task_importance_title"
            style="@style/TextRobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingRight="16dp"
            android:text="Importance"
            android:maxLines="1"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/task_importance_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_importance_detail"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/task_importance"
            style="@style/TextRobotoLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="87%"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/fontColor" />

    <LinearLayout
        android:id="@+id/task_interests_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/task_interests_title"
            style="@style/TextRobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingRight="16dp"
            android:text="Interests"
            android:maxLines="1"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/task_interests_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_interests_detail"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/task_interests"
            style="@style/TextRobotoLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="63%"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/fontColor" />

    <LinearLayout
        android:id="@+id/task_location_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:weightSum="3"
        android:visibility="gone">

        <TextView
            android:id="@+id/task_location_title"
            style="@style/TextRobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingRight="16dp"
            android:text="Location"
            android:maxLines="1"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/task_location_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_location"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/task_location"
            style="@style/TextRobotoLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roksolany, 25 str."
            android:textColor="@color/fontColor"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/fontColor" />

    <LinearLayout
        android:id="@+id/task_comments_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/task_comments_title"
            style="@style/TextRobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingRight="16dp"
            android:text="Comments"
            android:maxLines="1"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/task_comments_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_task_comment"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/task_comments"
            style="@style/TextRobotoLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_comments_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="8dp">

        <include layout="@layout/layout_comment_detail" />
        <include layout="@layout/layout_comment_detail" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/fontColor" />

    <LinearLayout
        android:id="@+id/task_subtasks_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/task_subtasks_title"
            style="@style/TextRobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingRight="16dp"
            android:text="Sub tasks"
            android:maxLines="1"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />


        <CheckBox
            android:id="@+id/task_subtasks_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            style="@style/MyCheckBox"/>

        <TextView
            android:id="@+id/task_subtasks"
            style="@style/TextRobotoLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/2"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_subtasks_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="8dp">

        <include layout="@layout/layout_subtask_detail" />
        <include layout="@layout/layout_subtask_detail" />

    </LinearLayout>

</LinearLayout>