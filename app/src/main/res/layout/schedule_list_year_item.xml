<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="90dp"
    android:layout_height="60dp"
    android:background="@color/scheduleListItemBackground"
    android:gravity="center">

    <TextView
        android:id="@+id/schedule_list_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        style="@style/TextRobotoLight"
        android:textColor="@color/scheduleListItemFontColor" />

    <TextView
        android:id="@+id/schedule_list_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        style="@style/TextRobotoThin"
        android:textColor="@color/scheduleListItemFontColor" />

</LinearLayout>