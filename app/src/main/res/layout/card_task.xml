<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/task_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp">

                <TextView
                    android:id="@+id/task_title"
                    style="@style/TextRobotoMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy grocery"
                    android:textColor="@color/fontColor"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/task_date"
                    style="@style/TextRobotoRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="January 5, 2017"
                    android:textColor="@color/fontColor87"
                    android:textSize="18sp" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/task_time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/task_from_time_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_from_time" />

                    <TextView
                        android:id="@+id/task_from_time"
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="8dp"
                        android:text="12:00 AM"
                        android:textColor="@color/fontColor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/slash"
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text=" - "
                        android:textColor="@color/fontColor"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/task_to_time_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_to_time" />

                    <TextView
                        android:id="@+id/task_to_time"
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="8dp"
                        android:text="01:00 PM"
                        android:textColor="@color/fontColor"
                        android:textSize="18sp" />

                    </LinearLayout>

                <RelativeLayout
                    android:id="@+id/task_duration_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/task_duration_title"
                        style="@style/TextRobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Duration"
                        android:layout_centerVertical="true"
                        android:textColor="@color/fontColor87"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/task_duration"
                        style="@style/TextRobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="8dp"
                        android:text="1 hour"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/fontColor87"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/task_duration_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/task_duration"
                        app:srcCompat="@drawable/ic_task_duration" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/task_subtasks_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/task_subtasks_title"
                        style="@style/TextRobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Sub tasks"
                        android:layout_centerVertical="true"
                        android:textColor="@color/fontColor87"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/task_subtasks"
                        style="@style/TextRobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="8dp"
                        android:text="0/1"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/fontColor87"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/task_subtasks_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/task_subtasks"
                        app:srcCompat="@drawable/ic_task_subtasks" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/task_comments_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/task_comments_title"
                        style="@style/TextRobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Comments"
                        android:layout_centerVertical="true"
                        android:textColor="@color/fontColor87"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/task_comments"
                        style="@style/TextRobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="8dp"
                        android:text="1"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/fontColor87"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/task_comments_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/task_comments"
                        app:srcCompat="@drawable/ic_task_comment" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/task_importance_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/task_importance_title"
                        style="@style/TextRobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Importance"
                        android:layout_centerVertical="true"
                        android:textColor="@color/fontColor87"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/task_importance"
                        style="@style/TextRobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="8dp"
                        android:text="87%"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/fontColor87"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/task_importance_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/task_importance"
                        app:srcCompat="@drawable/ic_task_importance" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/task_interests_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/task_interests_title"
                        style="@style/TextRobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Interests"
                        android:layout_centerVertical="true"
                        android:textColor="@color/fontColor87"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/task_interests"
                        style="@style/TextRobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="8dp"
                        android:text="39%"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/fontColor87"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/task_interests_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/task_interests"
                        app:srcCompat="@drawable/ic_task_interests" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/menu_layout"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:padding="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/more_button"
                    style="@style/TextRobotoMedium"
                    android:layout_width="64dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="MORE"
                    android:textColor="@color/colorTypeToDo"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/doing_button"
                    style="@style/TextRobotoMedium"
                    android:layout_width="64dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="DOING"
                    android:textColor="@color/colorTypeToDo"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cancel_button"
                    style="@style/TextRobotoMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="CANCEL"
                    android:textColor="@color/colorTypeToDo"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/task_state_layout"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:paddingTop="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:background="@color/colorTypeSchedule">

            <ImageView
                android:id="@+id/more_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_more"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOW"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_below="@+id/more_image"
                android:layout_marginTop="30dp"
                style="@style/TextRobotoLight"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>